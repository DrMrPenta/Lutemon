
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

<item>
    <shape android:shape="rectangle" >
        <solid android:color="#3F8EEB" />
        <stroke
            android:width="2dp"
            android:color="#000000" />
    </shape>
</item>
<item>
    <rotate
        android:fromDegrees="150"
        android:pivotX="80%"
        android:pivotY="100%"
        >
        <shape android:shape="rectangle" >
            <solid android:color="#FFF" />
            <stroke
                android:width="2dp"
                android:color="#000000" />
        </shape>
    </rotate>
</item>
    <item>
        <rotate
            android:fromDegrees="150"
            android:pivotX="10%"
            android:pivotY="7%"
            >
            <shape android:shape="rectangle" >
                <solid android:color="#FFF" />
                <stroke
                    android:width="2dp"
                    android:color="#000000" />
            </shape>
        </rotate>
    </item>

</layer-list>